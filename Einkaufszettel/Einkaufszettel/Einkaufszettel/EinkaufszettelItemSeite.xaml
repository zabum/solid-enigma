<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Einkaufszettel.EinkaufszettelItemSeite"
             Title="{Binding Name}">
    <StackLayout Margin="20" VerticalOptions="StartAndExpand">
        <Label Text="Name" />
        <Entry Text="{Binding Name}" />
        <Button Text="Speichern" Clicked="OnSpeichernClicked"/>
        <Button Text="Löschen" Clicked="OnLöschenClicked" />
        <Button Text="Abbrechen" Clicked="OnAbbrechenClicked" />
        <Button Text="Sprechen" Clicked="OnSprechenClicked"/>
    </StackLayout>
</ContentPage>